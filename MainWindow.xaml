<Window x:Class="practice_06._02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice_06._02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <Label Content="Технологія ADO" HorizontalAlignment="Center"
               FontSize="20" FontWeight="DemiBold"/>
        <Button x:Name="IntroButton" Content="Вступ. Налаштування"
                FontSize="18" FontWeight="DemiBold"
                Margin="20 10" Padding="5"
                Click="IntroButton_Click"/>
    </StackPanel>
</Window>
